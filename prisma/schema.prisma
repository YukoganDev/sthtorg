model Card {
  id       Int    @id @unique @default(autoincrement())
  name     String
  //author   User?  @relation(fields: [authorId], references: [id])
  authorId Int
  //User     User?  @relation(fields: [userId], references: [id])
  //userId   Int?
}

model Term {
  id         Int     @id @default(autoincrement())
  term       String
  definition String
  cardId     Int
  authorId   Int?
  star       Boolean @default(false)
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}
